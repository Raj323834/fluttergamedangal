<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background" android:gravity="center_vertical" android:height="5dp" >
        <shape>
            <solid
                android:color="@color/rummy_grey" />
            <corners android:radius="5dp" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle" >
                <solid android:color="#f7921e"  />
                <corners android:radius="5dp" />
                <stroke android:color="@color/rummy_black" android:width="1dp"/>

            </shape>
        </clip>
    </item>

</layer-list>