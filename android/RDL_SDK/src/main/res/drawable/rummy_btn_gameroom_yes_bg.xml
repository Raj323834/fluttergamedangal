<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="90" android:startColor="@color/rummy_app_blue" android:endColor="@color/rummy_app_blue"/>


            <corners android:radius="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="270" android:startColor="@color/rummy_app_blue" android:endColor="@color/rummy_app_blue"/>
            <corners android:radius="5dp" />
        </shape>

    </item>
</selector>
