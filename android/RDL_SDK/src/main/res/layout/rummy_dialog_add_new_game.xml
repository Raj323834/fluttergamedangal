<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/rummy_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llTopBar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/marginSizeSmall"
            android:layout_marginTop="@dimen/marginSizeSmall"
            android:layout_marginRight="@dimen/marginSizeSmall"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCashOption"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rummy_curve_edges_filled_et_grey_flat_bottom_less_round"
                android:gravity="center"
                android:text="Cash"
                android:textColor="@color/rummy_black"
                android:textSize="@dimen/moreSettingsTextSize" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".1" />

            <TextView
                android:id="@+id/tvFreeOption"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rummy_curve_edges_filled_app_blue_dark_flat_bottom_less_round"
                android:gravity="center"
                android:text="Free"
                android:textColor="@color/rummy_white"
                android:textSize="@dimen/moreSettingsTextSize" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".1" />

            <TextView
                android:id="@+id/tvFavOption"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rummy_curve_edges_filled_app_blue_dark_flat_bottom_less_round"
                android:gravity="center"
                android:text="Favourite"
                android:textColor="@color/rummy_white"
                android:textSize="@dimen/moreSettingsTextSize" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3" />

            <ImageView
                android:id="@+id/ivCloseOption"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical|right"
                android:layout_weight=".5"
                android:src="@drawable/rummy_close_inner_gr" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llRummyType"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@id/llTopBar"
            android:background="@color/rummy_grey_et_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".1" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/half_fab_margin"
                android:layout_marginBottom="@dimen/half_fab_margin"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/tvPointRummyStart"
                    android:background="@drawable/rummy_curve_edges_filled_app_blue_light_right_flat"
                    android:gravity="center"
                    android:text="Points Rummy"
                    android:textColor="@color/rummy_white"
                    android:textSize="@dimen/moreInofTextSize" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/paddingSizeSmallPlus"
                    android:layout_weight="1"
                    android:background="@color/rummy_white"
                    android:gravity="center"
                    android:id="@+id/tvPoolRummyMiddle"
                    android:text="Pools Rummy"
                    android:textColor="@color/rummy_black"
                    android:textSize="@dimen/moreInofTextSize" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/paddingSizeSmallPlus"
                    android:layout_weight="1"
                    android:id="@+id/tvDealsRummyLast"
                    android:background="@drawable/rummy_curve_edges_filled_white_left_flat"
                    android:gravity="center"
                    android:text="Deals Rummy"
                    android:textColor="@color/rummy_black"
                    android:textSize="@dimen/moreInofTextSize" />


            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/llRummyType"
            android:layout_margin="@dimen/fab_margin"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Select Players"
                        android:textColor="@color/rummy_black"
                        android:textSize="@dimen/settingsInfoTextSize" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/marginSizeSmall"
                        android:background="@drawable/rummy_curve_edges_grey_hollow"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="35dp"
                            android:background="@drawable/rummy_curve_edges_filled_app_blue_light_right_flat"
                            android:gravity="center"
                            android:text="2"
                            android:id="@+id/tvTwoPlayer"
                            android:textColor="@color/rummy_white"
                            android:textSize="@dimen/settingsInfoTextSize" />

                        <TextView
                            android:layout_width="60dp"
                            android:id="@+id/tvSixPlayer"
                            android:layout_height="35dp"
                            android:background="@drawable/rummy_curve_edges_filled_white_left_flat"
                            android:gravity="center"
                            android:text="6"
                            android:textColor="@color/rummy_black"
                            android:textSize="@dimen/settingsInfoTextSize" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llPoolsType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Select Pools"
                        android:textColor="@color/rummy_black"
                        android:textSize="@dimen/settingsInfoTextSize" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/marginSizeSmall"
                        android:background="@drawable/rummy_curve_edges_grey_hollow"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="35dp"
                            android:background="@drawable/rummy_curve_edges_filled_app_blue_light_right_flat"
                            android:gravity="center"
                            android:text="101"
                            android:id="@+id/tv101Pool"
                            android:textColor="@color/rummy_white"
                            android:textSize="@dimen/settingsInfoTextSize" />

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="35dp"
                            android:gravity="center"
                            android:text="201"
                            android:id="@+id/tv201Pool"
                            android:textColor="@color/rummy_black"
                            android:textSize="@dimen/settingsInfoTextSize" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/llCashOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/fab_margin"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="center_horizontal"
                            android:text="POINTS VALUE"
                            android:textColor="@color/rummy_black"
                            android:textSize="@dimen/settingsInfoTextSize" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="@string/rupee_symbol"
                                android:textColor="@color/rummy_app_blue_light"
                                android:textSize="@dimen/moreSettingsTextSize" />

                            <TextView
                                android:id="@+id/tvPoints"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="1"
                                android:textColor="@color/rummy_app_blue_light"
                                android:textSize="@dimen/moreSettingsTextSize" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="center_horizontal"
                            android:text="ENTRY FEE"
                            android:textColor="@color/rummy_black"
                            android:textSize="@dimen/settingsInfoTextSize" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="@string/rupee_symbol"
                                android:textColor="@color/rummy_app_blue_light"
                                android:textSize="@dimen/moreSettingsTextSize" />

                            <TextView
                                android:id="@+id/tvEntryFee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="80"
                                android:textColor="@color/rummy_app_blue_light"
                                android:textSize="@dimen/moreSettingsTextSize" />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/fab_margin"
                android:background="@drawable/rummy_curve_edges_filled_btn_green"
                android:drawableRight="@drawable/rummy_ic_right"
                android:gravity="center"
                android:id="@+id/btnJoin"
                android:padding="@dimen/paddingSizeSmallPlus"
                android:text="JOIN"
                android:textColor="@color/rummy_white"
                android:textSize="@dimen/settingsInfoTextSize"
                android:textStyle="bold" />


        </LinearLayout>


    </RelativeLayout>


</LinearLayout>
