<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/rummy_grey"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_msg_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:text="Please wait while the app downloads..."
        android:textColor="@color/rummy_black" />

    <ProgressBar
        android:id="@+id/pBar"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:indeterminateDrawable="@drawable/rummy_progress_bar_new"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/percent_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:text="0%"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/rummy_black" />


</LinearLayout>