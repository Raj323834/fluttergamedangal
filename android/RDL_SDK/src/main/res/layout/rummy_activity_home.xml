<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rummy_white"
    android:keepScreenOn="true">

    <FrameLayout
        android:id="@+id/home_content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="64dp" />

    <RelativeLayout
        android:layout_marginBottom="-1dp"
        android:layout_marginRight="-1dp"
        android:layout_marginLeft="-1dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/rummy_bottom_navigation_bg"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/tab_group"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@id/home"
                    android:paddingBottom="4dp"
                    android:gravity="bottom|center_horizontal"
                    android:textColor="@color/rummy_colorAccent"
                    android:text="HOME"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:button="@null" />

                <RadioButton
                    android:id="@+id/lobby"
                    android:paddingBottom="4dp"
                    android:gravity="bottom|center_horizontal"
                    android:textColor="@color/rummy_white"
                    android:text="LOBBY"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:button="@null"/>

                <RadioButton
                    android:id="@+id/tournaments"
                    android:paddingBottom="4dp"
                    android:gravity="bottom|center_horizontal"
                    android:textColor="@color/rummy_white"
                    android:text="Tourney"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:button="@null"/>

                <RadioButton
                    android:id="@+id/tables"
                    android:paddingBottom="4dp"
                    android:gravity="bottom|center_horizontal"
                    android:textColor="@color/rummy_white"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="TABLE"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:button="@null"/>

                <RadioButton
                    android:id="@+id/support"
                    android:paddingBottom="4dp"
                    android:gravity="bottom|center_horizontal"
                    android:textColor="@color/rummy_white"
                    android:text="SUPPORT"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:button="@null"
                    android:visibility="gone" />

                <RadioButton
                    android:id="@+id/more"
                    android:paddingBottom="4dp"
                    android:gravity="bottom|center_horizontal"
                    android:textColor="@color/rummy_white"
                    android:text="EXIT"
                    android:visibility="visible"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:button="@null"/>



            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:gravity="center"
                android:padding="@dimen/fab_margin"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/rb_home_image"
                    android:clickable="false"
                    android:checked="true"
                    android:button="@null"
                    android:background="@drawable/rummy_menu_home_selected_icon"
                    android:layout_marginBottom="4dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:padding="@dimen/fab_margin"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/rb_lobby_image"
                    android:clickable="false"
                    android:layout_marginBottom="4dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/rummy_menu_lobby_icon"
                    android:button="@null"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>

            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:padding="@dimen/fab_margin"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/rb_tourney_image"
                    android:clickable="false"
                    android:layout_marginBottom="4dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/rummy_tourney"
                    android:button="@null"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>`

            <LinearLayout
                android:gravity="center"
                android:padding="@dimen/fab_margin"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/rb_table_image"
                    android:clickable="false"
                    android:layout_marginBottom="4dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/rummy_menu_table_icon"
                    android:button="@null"
                    android:layout_width="30dp"
                    android:layout_height="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:padding="@dimen/fab_margin"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/rb_support_image"
                    android:clickable="false"
                    android:layout_marginBottom="4dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/rummy_menu_support_icon"
                    android:button="@null"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:padding="@dimen/fab_margin"
                android:layout_weight="1"
                android:visibility="visible"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/rb_more_image"
                    android:clickable="false"
                    android:layout_marginBottom="4dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/rummy_menu_allgames_icon"
                    android:button="@null"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
