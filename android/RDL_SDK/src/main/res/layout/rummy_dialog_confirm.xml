<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:padding="6dp"
    android:background="@color/rummy_transparent"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="center"
        android:background="@drawable/rummy_curve_edges_gray"
        android:layout_width="match_parent"
        android:padding="@dimen/fab_margin"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:gravity="center"
            android:text="Are you sure you want to delete this bank account ?"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="@dimen/fab_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_weight=".2"
                android:layout_height="1dp"/>
            <Button
                android:id="@+id/yes_btn"
                android:textColor="@color/rummy_white"
                android:text="Yes"
                android:gravity="center"
                android:background="@color/rummy_app_blue"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_weight="1"/>
            <View
                android:layout_width="0dp"
                android:layout_weight=".1"
                android:layout_height="1dp"/>

            <Button
                android:id="@+id/no_btn"
                android:text="No"
                android:gravity="center"
                android:background="@color/rummy_grey"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_weight="1"/>
            <View
                android:layout_width="0dp"
                android:layout_weight=".2"
                android:layout_height="1dp"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
