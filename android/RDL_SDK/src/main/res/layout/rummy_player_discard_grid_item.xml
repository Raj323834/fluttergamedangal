<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/rummy_grey_dark_st_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/marginSizeSmall">

        <TextView
            android:id="@+id/discard_player_name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rummy_curve_edges_hollow_grey_less_round_no_padding"
            android:padding="@dimen/marginSizeSmall"
            android:text="Player 1"
            android:textColor="@color/rummy_white"
            android:textSize="@dimen/textSizeSmall" />

        <View
            android:layout_width="0dp"
            android:layout_weight=".01"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/marginSizeSmall"
            android:layout_marginRight="@dimen/marginSizeSmall"
            android:background="@color/rummy_color_one" />

        <in.glg.rummy.view.RummyView
            android:id="@+id/discard_player_cards_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:gravity="left" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/rummy_DarkGray" />
</LinearLayout>
