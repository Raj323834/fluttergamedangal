<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:layout_width="380dp"
    android:padding="4dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@drawable/rummy_curve_edges_gray"

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:id="@+id/heading"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="#F4818F"
            android:layout_gravity="center_horizontal"
            android:text="Unable to connect to the internet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView

            android:id="@+id/message"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:textColor="#999999"
            android:textSize="15sp"
            android:gravity="center"
            android:text="Cannot open HalaPlay Rummy as you seem to be disconnected from the internet. Please check your Internet connection &amp; try again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:textStyle="bold"
            android:stateListAnimator="@null"
            android:id="@+id/ok_btn"
            android:textColor="#ffffff"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="OK"

            android:textAllCaps="false"
            android:layout_width="120dp"
            android:layout_height="45dp" />

    </LinearLayout>



</LinearLayout>