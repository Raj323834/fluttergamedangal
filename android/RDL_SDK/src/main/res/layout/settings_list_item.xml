<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/settings_list_item_iv"
            android:layout_width="30dp"
            android:layout_height="21dp"
            android:layout_gravity="center|left"
            android:layout_marginLeft="@dimen/marginSizeMedium"
            android:layout_marginTop="@dimen/settingsListItemMargin"
            android:layout_marginRight="@dimen/marginSizeMedium"
            android:layout_marginBottom="@dimen/settingsListItemMargin"
            android:src="@drawable/rummy_gamesettings" />

    <in.glg.rummy.view.RummyTextView
        android:id="@+id/settings_list_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/settingsListItemMargin"
        android:layout_marginTop="@dimen/settingsListItemMargin"
        android:alpha="0.9"
        android:textColor="@color/rummy_black"
        android:textSize="@dimen/settingsItemTextSize" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/rummy_gameScreenDividerColor"
        android:layout_height="1dp"/>
</LinearLayout>
