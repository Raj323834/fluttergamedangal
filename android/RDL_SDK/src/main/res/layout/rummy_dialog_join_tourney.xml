<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/rummy_transparent"
    android:layout_width="350dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rummy_curve_edges_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:padding="@dimen/marginSizeSmall"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_height="60dp">
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/rummy_prize_gray_icon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSizeSmall"
                    android:textStyle="bold"
                    android:text="Loyal tourney"
                    android:textColor="@color/rummy_black"
                    android:layout_marginLeft="@dimen/marginSizeSmall"
                    android:id="@+id/tv_tourney_name"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:padding="@dimen/marginSizeMicro"
                android:gravity="center"
                android:layout_marginTop="@dimen/marginSizeSmall"
                android:background="@color/rummy_grey_et_bg"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:padding="@dimen/marginSizeMicro"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSizeMedium"
                        android:text="Starts"
                        android:textColor="@color/rummy_black"
                        android:layout_marginLeft="@dimen/marginSizeSmall"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSizeMedium"
                        android:textStyle="bold"
                        android:text="0"
                        android:id="@+id/tv_startTime"
                        android:layout_marginTop="@dimen/marginSizeMicro"
                        android:textColor="@color/rummy_black"
                        android:layout_marginLeft="@dimen/marginSizeSmall"
                        />

                </LinearLayout>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/rummy_White"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:padding="@dimen/marginSizeMicro"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSizeMedium"
                        android:text="Entry Fee"
                        android:textColor="@color/rummy_black"
                        android:layout_marginLeft="@dimen/marginSizeSmall"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSizeMedium"
                        android:textStyle="bold"
                        android:text="0"
                        android:id="@+id/tv_entryFee"
                        android:layout_marginTop="@dimen/marginSizeMicro"
                        android:textColor="@color/rummy_black"
                        android:layout_marginLeft="@dimen/marginSizeSmall"
                        />

                </LinearLayout>



            </LinearLayout>

            <TextView
                android:id="@+id/dialog_msg_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginSizeMedium"
                android:gravity="center"
                android:padding="@dimen/marginSizeSmall"
                android:text="You have reached maximum number of points, would you like to join another game ?"
                android:textColor="@color/rummy_black"
                android:textSize="@dimen/textSizeSmall" />

            <LinearLayout
                android:layout_marginTop="@dimen/marginSizeMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/paddingSizeMicro"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/no_btn"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_height"
                    android:layout_weight="1"
                    android:text="NO"
                    android:gravity="center"
                    android:background="@drawable/rummy_curve_edges_no_button"
                    android:textColor="@color/rummy_black_gray" />

                <View
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:background="@color/rummy_White"
                    />
                <Button
                    android:id="@+id/yes_btn"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_height"
                    android:layout_weight="1"
                    android:text="YES"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/rummy_curve_edges_yes_button"
                    android:textColor="@color/rummy_White" />



            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/popUpCloseBtn"
            android:layout_width="@dimen/popUpCloseBtnSize"
            android:layout_height="@dimen/popUpCloseBtnSize"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:src="@drawable/rummy_result_close_icon"
            android:visibility="gone" />

    </RelativeLayout>


</LinearLayout>
