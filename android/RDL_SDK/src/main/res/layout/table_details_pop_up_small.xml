<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/buy_in_width"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:background="@color/rummy_transparent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:background="@drawable/rummy_curve_edges_filled_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/rummy_grey_dark"
            android:paddingTop="4.0dp"
            android:layout_margin="3.0dp"
            android:paddingBottom="4.0dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="POINTS(BUYIN)"
                android:textColor="@color/rummy_white"
                android:textSize="15.0dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_margin="3.0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginSizeSmall"
            android:orientation="horizontal"
            >

            <View
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_weight=".5" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="left"
                android:text="@string/lobby_bet_header"
                android:textColor="@color/rummy_black_gray"
                android:textSize="@dimen/settingsViewInfoTitleTextSize" />

            <TextView
                android:id="@+id/bet_value_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="right"
                android:textColor="@color/rummy_black_gray"
                android:textSize="@dimen/settingsViewInfoTitleTextSize" />

            <View
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_weight=".5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:orientation="horizontal"
            >
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight=".5" />
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/rummy_grey_et_bg"
                android:layout_weight="6" />
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight=".5" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <View
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_weight=".5" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="left"
                android:text="Min Buyin"
                android:textColor="@color/rummy_black_gray"
                android:textSize="@dimen/settingsViewInfoTitleTextSize" />


            <TextView
                android:id="@+id/min_buy_value_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="right"
                android:textColor="@color/rummy_black_gray"
                android:textSize="@dimen/settingsViewInfoTitleTextSize" />

            <View
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_weight=".5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:orientation="horizontal"
            >
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight=".5" />
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/rummy_grey_et_bg"
                android:layout_weight="6" />
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight=".5" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <View
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_weight="0.5" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="left"
                android:text="Max Buyin"
                android:textColor="@color/rummy_black_gray"
                android:textSize="@dimen/settingsViewInfoTitleTextSize" />

            <TextView
                android:id="@+id/max_buy_value_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="right"
                android:textColor="@color/rummy_black_gray"
                android:textSize="@dimen/settingsViewInfoTitleTextSize" />

            <View
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_weight="0.5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:orientation="horizontal"
            >
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight=".5" />
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/rummy_grey_et_bg"
                android:layout_weight="6" />
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight=".5" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <View
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_weight="0.5" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="left"
                android:text="Wallet Balance"
                android:textColor="@color/rummy_black_gray"
                android:textSize="@dimen/settingsViewInfoTitleTextSize" />


            <TextView
                android:id="@+id/balance_value_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="right"
                android:textColor="@color/rummy_black_gray"
                android:textSize="@dimen/settingsViewInfoTitleTextSize" />

            <View
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_weight="0.5" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/half_fab_margin"
            android:background="@color/rummy_grey_et_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_30sdp"
                android:gravity="center"
                android:paddingLeft="@dimen/marginSizeSmall"
                android:paddingRight="@dimen/marginSizeSmall"
                android:paddingTop="3.0dp"
                android:paddingBottom="3.0dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/rummy_curve_edges_filled_white_more_round"
                android:layout_marginTop="@dimen/marginSizeSmall"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:gravity="center"
                    android:text="Buyin"
                    android:textColor="@color/rummy_black_gray"
                    android:textSize="@dimen/_10sdp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/marginSizeMedium"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/buy_in_value_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rummy_edittext_bg"
                        android:cursorVisible="true"
                        android:digits="0123456789."
                        android:gravity="center"
                        android:padding="@dimen/_4sdp"
                        android:minWidth="@dimen/_50sdp"
                        android:inputType="numberDecimal"
                        android:textColor="@color/rummy_black_gray"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginSizeSmall"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/marginSizeSmall"
                android:paddingRight="@dimen/marginSizeSmall"
                android:paddingTop="3.0dp"
                android:paddingBottom="3.0dp"
                android:background="@drawable/rummy_curve_edges_filled_white"
                android:layout_marginLeft="@dimen/marginSizeMedium"
                android:layout_marginRight="@dimen/marginSizeMedium"
                android:weightSum="1.0">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <!--<ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/slider_height"
                        android:layout_centerVertical="true"
                        android:indeterminate="false"
                        android:src="@drawable/rummy_buyin_bar" />

                    <SeekBar
                        android:id="@+id/seek_bar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:indeterminate="false"
                        android:maxWidth="230dp"
                        android:thumb="@drawable/rummy_buy_move"
                        android:thumbOffset="8dp" />-->
                    <com.warkiz.widget.IndicatorSeekBar
                        android:id="@+id/seek_bar_buy_in"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_15sdp"
                        app:isb_max="100"
                        app:isb_min="0"
                        app:isb_only_thumb_draggable="false"
                        app:isb_progress="0"
                        app:isb_show_indicator="none"
                        app:isb_thumb_drawable="@drawable/rummy_buy_in_thumb"
                        app:isb_thumb_size="@dimen/_15sdp"
                        app:isb_track_background_color="@color/rummy_grey_et_bg"
                        app:isb_track_background_size="8dp"
                        app:isb_track_progress_color="@color/rummy_app_blue"
                        app:isb_track_progress_size="8dp" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/marginSizeMedium"
                android:layout_marginRight="@dimen/marginSizeMedium"
                android:layout_marginTop="5.0dp"
                android:layout_marginBottom="5.0dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Min"
                        android:textColor="@color/rummy_black_gray"
                        android:textSize="@dimen/settingsViewInfoTitleTextSize" />

                    <TextView
                        android:id="@+id/min_val_seekbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3.0dp"
                        android:textColor="@color/rummy_black_gray"
                        android:textSize="@dimen/settingsViewInfoTitleTextSize" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Max"
                        android:textColor="@color/rummy_black_gray"
                        android:textSize="@dimen/settingsViewInfoTitleTextSize" />

                    <TextView
                        android:id="@+id/max_val_seekbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/rummy_black_gray"
                        android:layout_marginLeft="3.0dp"
                        android:textSize="@dimen/settingsViewInfoTitleTextSize" />

                </LinearLayout>



            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/marginSizeSmall"
            android:layout_height="40dp"
            android:layout_marginBottom="3.0dp"
            android:gravity="bottom"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/cancel_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="CANCEL"
                android:background="@color/rummy_grey"
                android:textColor="@color/rummy_black_gray" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1" />

            <Button
                android:id="@+id/join_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="JOIN"
                android:background="@color/rummy_color_button"
                android:textColor="@color/rummy_white" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
